<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mahdi.acuity">

    <uses-sdk tools:overrideLibrary="com.firebase.ui.auth, com.firebase.ui" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.WelcomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".activities.WelcomeActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignInActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".activities.WelcomeActivity"
            android:theme="@style/AppTheme.ActionBar"></activity>
        <activity android:name=".activities.BaseDrawerActivity"></activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="Home"></activity>
        <activity
            android:name=".activities.UserProfileActivity"
            android:label="My account" />
        <activity
            android:name=".activities.UploadPostActivity"
            android:label="Add a post"></activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="Manage my account"
            android:theme="@style/AppTheme.ActionBar"></activity>
        <activity android:name=".activities.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.IntroActivity">
        </activity>
    </application>

</manifest>